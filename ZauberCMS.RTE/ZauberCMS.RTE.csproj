<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>ZauberCMS.RTE</PackageId>
    <Version>2.0.0</Version>
    <Authors>Lee Messenger</Authors>
    <Description>A modern, extensible rich-text editor component for Blazor applications</Description>
    <PackageTags>blazor;richtext;editor;wysiwyg;html</PackageTags>
    <RepositoryUrl>https://github.com/YodasMyDad/ZauberEditor</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IncludeContentInPack>true</IncludeContentInPack>
    <ContentTargetFolders>contentFiles</ContentTargetFolders>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyName>ZauberCMS.RTE</AssemblyName>
    <RootNamespace>ZauberCMS.RTE</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0" />
  </ItemGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <!-- Exclude Node.js files from NuGet package -->
        <Content Remove="package.json" />
        <Content Remove="package-lock.json" />
        <Content Remove="node_modules\**" />
        <None Remove="package.json" />
        <None Remove="package-lock.json" />
    </ItemGroup>

</Project>
